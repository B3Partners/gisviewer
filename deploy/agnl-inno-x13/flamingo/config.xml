<?xml version="1.0" encoding="UTF-8"?>

<FLAMINGO xmlns:fmc="fmc" xmlns:cmc="cmc" xmlns:cmc="cmc" allowExternalInterface="map1.onReallyChangedExtent,.onRequest,toolGroup.onSetTool,map1.onIdentify,map1.onIdentifyData,map1.onInit,map1.onUpdateComplete,b_getfeatures.onEvent,b_buffer.onEvent,b_removePolygons.onEvent,b_highlight.onEvent,b_bookMark.onEvent,b_printMap.onEvent,b_layerSelection.onEvent,b_showOverzicht.onEvent,b_gps.onEvent,editMap.onGeometryDrawFinished" id="flamingo" lang="nl" languages="nl,en" tooltipdelay="100" preloadtitle="B3p Gisviewer" useexternalinterface="true">
    <style id=".tooltip" font-family="arial, sans-serif" font-size="12" color="#000000" display="block"/>
    <yguide id="my" y="50%"/>
    <xguide id="mx" x="50%"/>
    <fmc:MonitorMap id="monitorl" left="25%" top="10%" width="35%" listento="map1">
        <string id="waiting"  en="Making... [layer] [percentage]%..." nl="Kaart aan het maken..."/>
        <string id="loading"  en="Making... [layer] [percentage]%..." nl="Kaart aan het laden. [percentage]%"/>
    </fmc:MonitorMap>

    <fmc:Container backgroundcolor="#D6F1E9" left="0%" top="0" height="5%" width="100%">
		
        <fmc:ToolGroup id="toolGroup" tool="identify" listento="map1" width="500" height="65" left="0" top="5">
            <fmc:ToolZoomin id="toolZoomin" skin="f1" left="200"/>
            <fmc:ToolZoomout id="toolZoomout" left="230" skin="f1"/>
            <fmc:ToolPan id="toolPan" left="260" skin="f1"/>

            <fmc:ToolIdentify id="identify" left="290" skin="f1" />

            <fmc:ToolIdentify id="breinaald" left="290" skin="f2" visible="false">
                <cursor id='cursor' url='assets/jsbtn/polygon_select_cursor.png' xoffset="-8" yoffset="0"/>
                <cursor id='click' url='assets/jsbtn/polygon_select_cursor.png' xoffset="-8" yoffset="0"/>
                <cursor id='busy' url='assets/jsbtn/polygon_select_cursor.png' xoffset="-8" yoffset="0"/>
            </fmc:ToolIdentify>

            <fmc:ButtonFull id="toolFullExtent" left="320" listento="map1" />
            <fmc:ButtonPrev id="toolPrevExtent" left="350" listento="map1" />
            <fmc:ButtonNext id="toolNextExtent" left="380" listento="map1" />

            <!-- stukje knoppen voor redlining/ editing -->
            <fmc:Container id="redLiningContainer" left="410" visible="false">
                <!-- fmc:EditInfoPanel id="editInfoPanel" left="0%" top="50" listento="editMap" nrdigits="2"/ -->
                <fmc:EditLegend id="editLegend" left="0" top="0" listento="editMap" expandable="false"/>
                <fmc:EditBar id="editBar" left="5" top="0" listento="editMap" />
            </fmc:Container>

            <fmc:Container left="20">
                <fmc:JsButton id="b_buffer" left="465" top="0" width="21" height="21" iconurl_up="flamingo/assets/jsbtn/buffer_tool.png" iconurl_over="flamingo/assets/jsbtn/buffer_tool.png" iconurl_sel="flamingo/assets/jsbtn/buffer_tool.png" iconurl_dis="flamingo/assets/jsbtn/buffer_tool_disabled.png" label="" toggle="false" visible="false" enabled="false" selected="false">
                    <string id="tooltip" en="buffer polygon" nl="buffer het tekenobject"/>
                </fmc:JsButton>

                <fmc:JsButton id="b_highlight" left="495" top="0" width="21" height="21" iconurl_up="flamingo/assets/jsbtn/polygon_select.png" iconurl_over="flamingo/assets/jsbtn/polygon_select.png" iconurl_sel="flamingo/assets/jsbtn/polygon_select.png" iconurl_dis="flamingo/assets/jsbtn/polygon_select.png" label="" toggle="true" visible="false" enabled="true" selected="false">
                    <string id="tooltip" en="select object" nl="selecteer een object in de kaart"/>
                </fmc:JsButton>

                <fmc:JsButton id="b_getfeatures" left="525" top="0" width="21" height="21" iconurl_up="flamingo/assets/jsbtn/polygon_info.png" iconurl_over="flamingo/assets/jsbtn/polygon_info.png" iconurl_sel="flamingo/assets/jsbtn/polygon_info.png" iconurl_dis="flamingo/assets/jsbtn/polygon_info_disabled.png" label="" toggle="false" visible="false" enabled="true" selected="false">
                    <string id="tooltip" en="select within features" nl="selecteer binnen geselecteerd kaartobject"/>
                </fmc:JsButton>

                <fmc:JsButton id="b_removePolygons" left="555" top="0" width="21" height="21" iconurl_up="flamingo/assets/jsbtn/polygon_delete.png" iconurl_over="flamingo/assets/jsbtn/polygon_delete.png" iconurl_sel="flamingo/assets/jsbtn/polygon_delete.png" iconurl_dis="flamingo/assets/jsbtn/polygon_delete_disabled.png" label="" toggle="false" visible="false" enabled="true" selected="false">
                    <string id="tooltip" en="remove polygon" nl="verwijder het tekenobject"/>
                </fmc:JsButton>

                <fmc:JsButton id="b_printMap" left="585" top="0" width="21" height="21" iconurl_up="images/print.png" iconurl_over="images/print.png" iconurl_sel="images/print.png" iconurl_dis="images/print.png" label="" toggle="false" visible="false" enabled="true" selected="false">
                    <string id="tooltip" en="Print example" nl="Printvoorbeeld"/>
                </fmc:JsButton>
				
				<fmc:JsButton id="b_layerSelection" left="615" top="0" width="21" height="21" iconurl_up="images/book_open.png" iconurl_over="images/book_open.png" iconurl_sel="images/book_open.png" iconurl_dis="images/book_open.png" label="" toggle="false" visible="false" enabled="true" selected="false">
                    <string id="tooltip" en="layer selection" nl="kaartselectie"/>
                </fmc:JsButton>
				
                <fmc:JsButton id="b_gps" left="645" top="0" width="21" height="21" iconurl_up="flamingo/assets/jsbtn/gps_up.png" iconurl_over="flamingo/assets/jsbtn/gps_up.png" iconurl_sel="flamingo/assets/jsbtn/gps_on.png" iconurl_dis="flamingo/assets/jsbtn/gps_up.png" label="" toggle="true" visible="false" enabled="true" selected="false">
                    <string id="tooltip" en="Switch GPS location on/off" nl="Zet GPS locatie aan/uit"/>
                </fmc:JsButton>				
            </fmc:Container>
        </fmc:ToolGroup>
		
		<fmc:Scalebar left="705" top="-10" width="50" listento="map1" units=" m"></fmc:Scalebar>
		
        <fmc:Coordinates id="coordinates" listento="map1" left="800" top="7" decimals="0">
            <style id=".xy" font-family="arial" font-size="11" />
            <string id="xy" nl="X: [x]     Y: [y]" />
        </fmc:Coordinates>
    </fmc:Container>
	
    <fmc:Container id="containerLeft" backgroundcolor="#D6F1E9" left="0" top="5%" height="95%" width="200">
		<!-- overview map -->
        <fmc:Map id="map_overview" clear="true" extent="12000,304000,280000,620000"
			fullextent="12000,304000,280000,620000" top="5%" left="20%" height="118" width="100">
            <fmc:LayerOverview listento="map1" />
            <fmc:LayerImage id="Nederland" imageurl="assets/provincies.swf"
				extent="14562,307839,277026,613073" listento="map1" />
        </fmc:Map>
        
        <!-- innovatie legend image -->
        <fmc:Container id="containerLegendInnovatie" left="5" top="180">
			<fmc:Text left="0" top="-20" width="100" height="20">
				<string id="text">
					<nl>Legenda Innovatie</nl>
					<en>Legend Innovation</en>
				</string>
			</fmc:Text>

            <fmc:Image url="../images/legenda_01.png" />
        </fmc:Container>
		
		<!-- wbso legend image -->
        <fmc:Container id="containerLegendWbso" left="5" top="290">
			<fmc:Text left="0" top="-20" width="100" height="20">
				<string id="text">
					<nl>Legenda WBSO</nl>
					<en>Legend WBSO</en>
				</string>
			</fmc:Text>
			
            <fmc:Image url="../images/legenda_wbso.png" />
        </fmc:Container>
        
    </fmc:Container>
    <fmc:Container id="containerMain" borderwidth="1" bordercolor="#606060" left="200" top="5%" height="95%" right="100%">
        <fmc:BorderNavigation listento="map1" top="0%" width="100%" height="100%" skin="f1"/>

        <!-- het 'canvas' waar op getekend kan worden-->
        <fmc:EditMap id="editMap" editable="true" left="0" top="0%" height="100%" width="100%" bottom="bottom" listento="gis,map1"/>

        <fmc:GIS id="gis" geometryeditable="yes" alwaysdrawpoints="no">
            <fmc:Layer id="layer1" name="layer1" visible="true" geometrytypes="Point,LineString,Polygon,MultiPolygon">
                <fmc:Style fillcolor="0x000000" fillopacity="30" strokecolor="0xcc0000" strokeopacity="100" strokeWidth="1"/>
            </fmc:Layer>
        </fmc:GIS>

        <fmc:Maptip listento="map1"/>
        <fmc:Map maptipdelay="150" id="map1" left="0" top="0%" height="100%" width="100%"
        bottom="bottom" visible="true" extenthistory="10" movesteps="20" movetime="100">
            <fmc:LayerIdentifyIcon  id="identifyicon"/>          
        </fmc:Map>        
    </fmc:Container>
</FLAMINGO>