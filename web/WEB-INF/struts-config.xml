<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
    <form-beans>
        <form-bean name="messagesForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="action" type="java.lang.String"/>
            <form-property name="alt_action" type="java.lang.String"/>
            <form-property name="xsl" type="java.lang.String"/>
            <form-property name="to" type="java.lang.String"/>
            <form-property name="from" type="java.lang.String"/>
            <form-property name="subject" type="java.lang.String"/>
            <form-property name="cc" type="java.lang.String"/>
            <form-property name="bcc" type="java.lang.String"/>
            <form-property name="body" type="java.lang.String"/>
            <form-property name="mailhost" type="java.lang.String" initial="kmail.b3p.nl"/>
        </form-bean>
    </form-beans>
    
    <global-exceptions>
    </global-exceptions>
    
    <global-forwards>
    </global-forwards>
    
    <action-mappings>
        <action path="/index" forward="index"/>
        <action path="/help" forward="help"/>
        <action path="/login" forward="login"/>
        <action path="/loginError" type="nl.b3p.nbr.wis.services.LoginAction">
            <forward name="success" path="login"/>
        </action>
        <action path="/logout" type="nl.b3p.nbr.wis.services.LogoutAction">
            <forward name="success" path="/index.do" redirect="true"/>
        </action>
        
        <action path="/viewer" type="nl.b3p.nbr.wis.ViewerAction">
            <forward name="success" path="viewer"/>
        </action>
        <action path="/viewerdata" type="nl.b3p.nbr.wis.GetViewerDataAction">
            <!-- <forward name="success" path="viewerdata"/> -->
            <forward name="failure" path="viewerdata"/>
            <forward name="admindata" path="vieweradmindata"/>
            <forward name="doanalyse" path="vieweradmindata"/>
            <forward name="metadata" path="viewermetadata"/>
            <forward name="objectdata" path="viewerobjectdata"/>
            <forward name="analysedata" path="vieweranalysedata"/>
            <forward name="analyseobject" path="vieweranalyseobject"/>
            <forward name="aanvullendeinfo" path="vieweraanvullendeinfo"/>
        </action>
        
        <action path="/etl" type="nl.b3p.nbr.wis.ETLOverviewAction">
            <forward name="success" path="etlhome"/>
        </action>        
        <action path="/etlscheduler" forward="etlscheduler"/>
        <action path="/etltransform" type="nl.b3p.nbr.wis.ETLTransformAction">
            <forward name="success" path="etltransform"/>
            <forward name="showData" path="vieweradmindata"/>
        </action>
        <action path="/etlthemalijst" type="nl.b3p.nbr.wis.ETLTransformAction">
            <forward name="success" path="etlthemalijst"/>
        </action>
        
        <action path="/listManager" type="nl.b3p.commons.mail.MessageAction" name="messagesForm" scope="request" validate="false">
            <forward name="view" path="/index.do"/>
            <forward name="continue" path="/index.do"/>
        </action>
        
    </action-mappings>
    
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>
    
    <message-resources  parameter="WisResources" null="true" />
    
    <!-- ========================= Tiles plugin ===============================-->
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />      
        <set-property property="moduleAware" value="true" />
    </plug-in>
    
    <!-- ========================= Validator plugin ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
            property="pathnames"
            value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>
    
</struts-config>
