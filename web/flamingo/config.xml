<FLAMINGO xmlns:fmc="fmc" id="flamingo" lang="nl" languages="nl,en" tooltipdelay="300" commtojava="true" preloadtitle="Prototypemap" useexternalinterface="true">
    <style id=".tooltip" font-family="arial, sans-serif" font-size="11" color="#880000" display="block"/>
    <yguide id="my" y="50%"/>
    <xguide id="mx" x="50%"/>
    <fmc:MonitorLayer id="monitorl" left="50%" top="50%" width="50%" listento="map1">
        <string id="waiting"  en="Making... [layer] [percentage]%..." nl="Kaart aan het maken..."/>
        <string id="loading"  en="Making... [layer] [percentage]%..." nl="Kaart aan het laden. [percentage]%"/>
    </fmc:MonitorLayer>
    <fmc:Container backgroundcolor="#D2E0EB" left="0" top="0" height="7%" width="100%">
        <fmc:Scalebar left="30%" top="40%" width="40%" listento="map1" units=" km" magicnumber="1000"></fmc:Scalebar>
        <fmc:ToolGroup tool="zoom" listento="map1" width="148" height="65" left="0" top="0%">
            <fmc:ToolZoomin id="zoom"/>
            <fmc:ToolZoomout left="30"/>
            <fmc:ToolPan left="60"/>
            <fmc:ToolMeasure left="90"/>
            <fmc:ToolIdentify left="120"/>
        </fmc:ToolGroup>
        <fmc:Coordinates listento="map1" left="80%" top="20%" decimals="0">
            <style id=".xy" font-family="arial" font-size="11" />
            <string id="xy" nl="X: [x]     Y: [y]" />
        </fmc:Coordinates>
    </fmc:Container>
    <fmc:Container backgroundcolor="#D2E0EB" left="0" top="7%" height="93%" width="25%">
        <fmc:Map id="overview"  left="2%" top="0%" height="400" width="200" extent="7663,168896,285051,723673" fullextent="7663,168896,285051,723673">
            <fmc:LayerOverview listento="map1"/>
            <fmc:LayerImage id="Limburg" imageurl="../images/overviewNederland.png" extent="7663,168896,285051,723673" />
        </fmc:Map>
           <fmc:Text left="5%" top="65%" width="95%" height="35%">  
               <string id="text">  
                  <nl><![CDATA[<font size="15" face="arial"><b>Disclaimer:</b> Aan de kaart kunnen geen rechten worden ontleend.</font>]]></nl> 
               </string>  
         </fmc:Text>  
    </fmc:Container>
    <fmc:Container  borderwidth="1" bordercolor="#606060" left="26%" top="8%" height="92%" width="74%">    
        <fmc:BorderNavigation listento="map1" top="0%" width="100%" height="100%" skin="f1"/>        
        <fmc:Map id="map1" left="0" top="0%" height="100%" width="100%" bottom="bottom" visible="true" extent="1200,30400,28000,62000">
            <fmc:LayerIdentifyIcon  id="identifyicon"/>
        </fmc:Map>                
    </fmc:Container>
</FLAMINGO>