<?xml version="1.0" encoding="UTF-8"?>

<FLAMINGO xmlns:fmc="fmc" denyExternalInterface="map1.onmousemove" id="flamingo" lang="nl" languages="nl,en" tooltipdelay="300" preloadtitle="B3p Gisviewer" useexternalinterface="true">
    <style id=".tooltip" font-family="arial, sans-serif" font-size="11" color="#880000" display="block"/>
    <yguide id="my" y="50%"/>
    <xguide id="mx" x="50%"/>
    <fmc:MonitorLayer id="monitorl" left="25%" top="10%" width="35%" listento="map1">
        <string id="waiting"  en="Making... [layer] [percentage]%..." nl="Kaart aan het maken..."/>
        <string id="loading"  en="Making... [layer] [percentage]%..." nl="Kaart aan het laden. [percentage]%"/>
    </fmc:MonitorLayer>

    <fmc:Container backgroundcolor="#D2E0EB" left="0" top="0" height="5%" width="100%">
        <fmc:Scalebar left="530" top="40%" width="100" listento="map1" units=" m"></fmc:Scalebar>
        <fmc:ToolGroup id="toolGroup" tool="identify" listento="map1" width="500" height="65" left="5" top="5">
            <fmc:ToolZoomin id="toolZoomin" skin="f2" />
            <fmc:ToolZoomout id="toolZoomout" left="30" skin="f2"/>
            <fmc:ToolPan id="toolPan" left="60" skin="f2" skin="f2"/>
            <fmc:ToolMeasure id="toolMeasure" left="90" skin="f2" />

            <fmc:ToolIdentify id="identify" left="120" skin="f2" />

            <fmc:ToolIdentify id="breinaald" left="120" skin="f2" visible="false">
                    <cursor id='cursor' url='assets/jsbtn/btn_breinaald_up.png' xoffset="-12" yoffset="-32"/>
                    <cursor id='click' url='assets/jsbtn/btn_breinaald_up.png' xoffset="-12" yoffset="-32"/>
                    <cursor id='busy' url='assets/jsbtn/btn_breinaald_up.png' xoffset="-12" yoffset="-32"/>
            </fmc:ToolIdentify>

            <fmc:ButtonFull id="toolFullExtent" left="150" listento="map1" skin="f2" />
            <fmc:ButtonPrev id="toolPrevExtent" left="180" listento="map1" skin="f2" />
            <fmc:ButtonNext id="toolNextExtent" left="210" listento="map1" skin="f2" />

            <!-- stukje knoppen voor redlining/ editing -->
            <fmc:Container id="redLiningContainer" visible="false">
                <fmc:EditInfoPanel id="editInfoPanel" left="0%" top="50" listento="editMap" nrdigits="2"/>
                <fmc:EditLegend id="editLegend" left="250" top="0" listento="editMap" expandable="false"/>
                <fmc:EditBar id="editBar" left="250" top="0" listento="editMap" />
            </fmc:Container>

            <fmc:Container left="20">
                <fmc:JsButton id="b_buffer" left="320" top="0" width="25" height="25" iconurl_up="flamingo/assets/jsbtn/buffer.png" iconurl_over="flamingo/assets/jsbtn/buffer_over.png" iconurl_sel="flamingo/assets/jsbtn/buffer_down.png" iconurl_dis="flamingo/assets/jsbtn/buffer.png" label="" toggle="false" visible="false" enabled="false" selected="false">
                    <string id="tooltip" en="buffer polygon" nl="buffer het tekenobject"/>
                </fmc:JsButton>

                <fmc:JsButton id="b_highlight" left="350" top="0" width="25" height="25" iconurl_up="flamingo/assets/jsbtn/btn_breinaald_up.png" iconurl_over="flamingo/assets/jsbtn/btn_breinaald_up.png" iconurl_sel="flamingo/assets/jsbtn/btn_breinaald_up.png" iconurl_dis="flamingo/assets/jsbtn/btn_breinaald_up.png" label="" toggle="true" visible="false" enabled="true" selected="false">
                    <string id="tooltip" en="get feature info with needle" nl="informatie opvragen via breinaald"/>
                </fmc:JsButton>

                <fmc:JsButton id="b_getfeatures" left="380" top="0" width="25" height="25" iconurl_up="flamingo/assets/jsbtn/getfeatures.png" iconurl_over="flamingo/assets/jsbtn/getfeatures.png" iconurl_sel="flamingo/assets/jsbtn/getfeatures.png" iconurl_dis="flamingo/assets/jsbtn/getfeatures.png" label="" toggle="false" visible="false" enabled="true" selected="false">
                    <string id="tooltip" en="Select features" nl="selecteer features"/>
                </fmc:JsButton>

                <fmc:JsButton id="b_removePolygons" left="410" top="0" width="25" height="25" iconurl_up="flamingo/assets/jsbtn/remove_polygon.png" iconurl_over="flamingo/assets/jsbtn/remove_polygon_over.png" iconurl_sel="flamingo/assets/jsbtn/remove_polygon_down.png" iconurl_dis="flamingo/assets/jsbtn/remove_polygon.png" label="" toggle="false" visible="false" enabled="true" selected="false">
                    <string id="tooltip" en="remove polygon" nl="verwijder het tekenobject"/>
                </fmc:JsButton>              
            </fmc:Container>

        </fmc:ToolGroup>
        <fmc:Coordinates id="coordinates" listento="map1" left="85%" top="10" decimals="0">
            <style id=".xy" font-family="arial" font-size="11" />
            <string id="xy" nl="X: [x]     Y: [y]" />
        </fmc:Coordinates>
    </fmc:Container>
    
    <fmc:Container id="containerMain" borderwidth="1" bordercolor="#606060" left="0" top="5%" height="95%" width="100%">
        <fmc:BorderNavigation listento="map1" top="0%" width="100%" height="100%" skin="f1"/>        

        <!-- het 'canvas' waar op getekend kan worden-->
        <fmc:EditMap id="editMap" editable="true" left="0" top="0%" height="100%" width="100%" bottom="bottom" listento="gis,map1"/>

        <fmc:GIS id="gis" geometryeditable="yes" alwaysdrawpoints="no">
            <fmc:Layer id="layer1" name="layer1" visible="true" geometrytypes="Point,LineString,Polygon,MultiPolygon">
                <fmc:Style fillcolor="0x000000" fillopacity="30" strokecolor="0xcc0000" strokeopacity="100" strokeWidth="1"/>
            </fmc:Layer>
        </fmc:GIS>

        <fmc:Maptip listento="map1"/>
        <fmc:Map maptipdelay="1000" id="map1" left="0" top="0%" height="100%" width="100%"
        bottom="bottom" visible="true" extenthistory="10" extent="21000,357000,283000,615000"
        movequality="BEST" fadesteps="3" movesteps="20" movetime="100">
            <fmc:LayerIdentifyIcon  id="identifyicon"/>

            <fmc:LayerImage id="Limburg_achtergrond2"
            imageurl="assets/limburg/limburg_achtergrond2.png"
            extent="118739,290740,268450,436514"/>
        </fmc:Map>                
    </fmc:Container>
</FLAMINGO>